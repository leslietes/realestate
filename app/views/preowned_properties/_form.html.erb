                        <%= f.text_field :monthly_dues %>

                        <label class="ct-fw-600 text-uppercase ct-u-marginBottom10">Price</label><br/>
                        <%= f.text_field :price %>

                        <label class="ct-fw-600 text-uppercase ct-u-marginBottom10">Latitude</label><br/>
                        <%= f.text_field :latitude %>

                        <label class="ct-fw-600 text-uppercase ct-u-marginBottom10">Longitude</label><br/>
                        <%= f.text_field :longitude %>

                        <label class="ct-fw-600 text-uppercase ct-u-marginBottom10">Elevators</label><br/>
                        <%= f.check_box :elevators %>

                        <label class="ct-fw-600 text-uppercase ct-u-marginBottom10">Swimming Pool</label><br/>
                        <%= f.check_box :swimming_pool %>

