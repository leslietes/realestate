

<section class="ct-u-paddingTop50 ct-u-paddingBottom100">
    <div class="container">
        <div class="ct-headerText--normal text-uppercase ct-u-marginBottom40">
            <h2>New / Edit Preowned Properties</h2>
        </div>
        <div class="row">
            <div class="col-md-6">
                <form role="form" class="ct-formSubmission">
                    <div class="form-group ">
                      <% if @preowned_property.errors.any? %>
                        <div id="error_explanation">
                          <h2>
                            <%= pluralize(@preowend.errors.count, "error") %> prohibited this preowned property from being saved:
                          </h2>

                          <ul>
                          <% @preowned.errors.full_messages.each do |msg| %>
                            <li><%= msg %></li>
                            <% end %>
                          </ul>
                        </div>
                      <% end %>

                        <label class="ct-fw-600 text-uppercase ct-u-marginBottom10">Name</label>
                        <%= f.text_field :name %>

                        <label class="ct-fw-600 text-uppercase ct-u-marginBottom10">Permalink</label>
                        <%= f.text_field :permalink %>

                        <label class="ct-fw-600 text-uppercase ct-u-marginBottom10">Address</label><br/>
                        <%= f.text_field :address %>

                        <label class="ct-fw-600 text-uppercase ct-u-marginBottom10">Location</label><br/>

                        <%= select("preowned_property","location", @locations, {:include_blank => true}, class: 'ct-js-select ct-select-lg') %><br/>

                        <label class="ct-fw-600 text-uppercase ct-u-marginBottom10">Project Name</label><br/>
                        <%= f.text_field :project_name %>

                        <label class="ct-fw-600 text-uppercase ct-u-marginBottom10">Developer</label><br/>
                        <%= f.text_field :developer %>

                        <label class="ct-fw-600 text-uppercase ct-u-marginBottom10">View</label><br/>
                        <%= f.text_field :view%>

                        <label class="ct-fw-600 text-uppercase ct-u-marginBottom10">Orientation</label><br/>
                        <%= f.text_field :orientation %>

                        <label class="ct-fw-600 text-uppercase ct-u-marginBottom10">Unit type</label><br/>
                        <%= f.text_field :unit_type %>

                        <label class="ct-fw-600 text-uppercase ct-u-marginBottom10">Unit size</label><br/>
                        <%= f.text_field :unit_size %>

                        <label class="ct-fw-600 text-uppercase ct-u-marginBottom10">No of bedrooms</label><br/>
                        <%= f.text_field :bedrooms%>

                        <label class="ct-fw-600 text-uppercase ct-u-marginBottom10">No of bathrooms</label><br/>
                        <%= f.text_field :bathrooms %>

