<section class="ct-u-paddingTop50 ct-u-paddingBottom60">
<div class="container">
<div class="ct-section--products">
<div class="row">
<div class="col-md-12">
<div class="ct-sortingBar ct-u-paddingRight10 ct-u-paddingLeft10 ct-u-marginBottom30">
    <div class="ct-sortingTitle pull-left">
        <h4 class="text-uppercase">Developers</h4>
    </div>
    <div class="clearfix"></div>
</div>
<div class="row ct-js-search-results ct-showProducts--default">
	<% @developers.each do |developer| %>
    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
    <div class="ct-itemProducts ct-u-marginBottom30">


            <div class="ct-main-content">
                <div class="ct-imageBox">
									<%= link_to (image_tag developer.image.url(:medium)), developer_url(developer)	 %>
                </div>
                <div class="ct-main-text">
                    <div class="ct-product--tilte">
                        <%= link_to developer.developer, developer_url(developer) %>
                    </div>
                    <div class="ct-product--description">
                        <%= pluralize(developer.properties.size, 'property') %> 
												<br/><br/>
												<%= link_to 'Edit', edit_developer_url(developer) %>
												<%= link_to 'Delete', developer_url(developer), :method => :delete, :confirm => "Are you sure?" %>
                    </div>
                </div>
            </div>
         </div>
       </div>
    <div class="clearfix visible-sm"></div>
  <% end %>
  <div class="clearfix visible-sm visible-md"></div>
</div>
<%= link_to 'New', new_developer_url %>
</div>
</div>
</div>
</div>
</section>
