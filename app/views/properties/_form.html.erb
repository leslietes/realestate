<section class="ct-u-paddingTop50 ct-u-paddingBottom100">
    <div class="container">
        <div class="ct-headerText--normal text-uppercase ct-u-marginBottom40">
            <h2>New / Edit Property</h2>
        </div>
        <div class="row">
          <%= form_for @property, url: {action: "create"}, html: {class: "ct-property--small", multipart: true} do |f| %>
            <div class="col-md-6">
                
                    <div class="form-group ">
											<% if @property.errors.any? %>
											  <div id="error_explanation">
											    <h2>
											    	<%= pluralize(@property.errors.count, "error") %> prohibited this property from being saved:
											    </h2>

											    <ul>
												  <% @property.errors.full_messages.each do |msg| %>
											 	    <li><%= msg %></li>
											  	  <% end %>
											    </ul>
											  </div>
											<% end %>

                      <p class="c-select-container">
												<label>Status *</label>
												<%= f.select(:status, ['Preselling','Ongoing','Completed','Sold Out']) %>
                      </p>

                      <p>
												<label>Name *</label>
												<%= f.text_field :name %>
                      </p>

											<p>
												<label>Permalink *</label>
												<%= f.text_field :permalink %>
                      </p>

											<p>
                        <label>Unit Types (Studio, 1 br, 2 br) *</label>
												<%= f.text_field :unit_types %>
                      </p>

                      <div class="row">
                        <p class="col-xs-6">
                          <label>Price From *</label>
                          <%= f.text_field :price_from %>
                        </p>
                        <p class="col-xs-6">
                          <label>Price To *</label>
                          <%= f.text_field :price_to %>
                        </p>
                      </div>

											<p>
												<label>Unit Sizes (25 - 30 sq. m.)</label>
												<%= f.text_field :unit_sizes %>
                      </p>

											<p>
												<label>Upload featured image * </label>
                        <%= f.file_field :photo %>
												<span><small>This is going to be the main image of property, it will be shown in thumbnails and all important places.</small></span>
										  </p>

											<p class="c-select-container">
												<label>Developer *</label>
                        <%= f.collection_select(:developer_id, Developer.all, :id, :developer) %>
                      </p>

                      <p>
                        <label>Upload logo</label>
                        <%= f.file_field :logo %>
                      </p>

												<p>
													<label>No of floors * </label>
                          <%= f.text_field :no_of_floors %>
												</p>

												<p>
													<label>No of bldgs * </label>
                          <%= f.text_field :no_of_bldgs %>
												</p>

												<p>
													<label>No of units * </label>
                          <%= f.text_field :no_of_units %>
												</p>

												<p>
												  <label>Address * </label>
                          <%= f.text_area :address, class: 'c-textarea' %>
												</p>

                        <p class="c-select-container">
												  <label>Location * </label>
                          <%= f.collection_select(:location, Location.all, :area, :area) %>
												</p>

												<p>
												  <label>Latitude * </label>
                          <%= f.text_field :latitude %>
												</p>

											  <p>
												  <label>Longitude * </label>
                          <%= f.text_field :longitude %>
												</p>

												<p>
												  <label>Description *</label>
                          <%= f.text_area :description, class: 'c-textarea' %>
												</p>

                        <p>
                          <label>Location Map</label>
                          <%= f.file_field :location_map %>
                        </p>

												<p>
                          <label class="c-box">
													  <%= f.check_box :featured %>
                            <span>Featured</span>
                          </label>

                          <label class="c-box">
													  <%= f.check_box :hidden %>
                            <span>Hidden</span>
                          </label>

                          <label class="c-box">
													  <%= f.check_box :sold_out %>
                            <span>Sold Out</span>
                          </label>

                          <label class="c-box">
													  <%= f.check_box :preselling %>
                            <span>Preselling</span>
                          </label>
												</p>

                        <p>
                          <br>
                          <h2>Amenities & Facilities </h2>
                          <ul class="c-list-cols">
                            <li>
                              <label class="c-box">
                                <%= f.check_box :elevators %>
                                <span>Elevators</span>
                              </label>
                            </li>
                            <li>
                              <label class="c-box">
                                <%= f.check_box :swimming_pool %>
                                <span>Swimming Pool</span>
                              </label>
                            </li>
                            <li>
                              <label class="c-box">
                                <%= f.check_box :fitness_gym %>
                                <span>Fitness Gym</span>
                              </label>
                            </li>
                            <li>
                              <label class="c-box">
                                <%= f.check_box :parking %>
                                <span>Parking</span>
                              </label>
                            </li>
                            <li>
                              <label class="c-box">
                                <%= f.check_box :function_room %>
                                <span>Function Room</span>
                              </label>
                            </li>
                            <li>
                              <label class="c-box">
                                <%= f.check_box :retail_area %>
                                <span>Retail Area</span>
                              </label>
                            </li>
                            <li>
                              <label class="c-box">
                                <%= f.check_box :childrens_play_area %>
                                <span>Children Play Area</span>
                              </label>
                            </li>
                            <li>
                              <label class="c-box">
                                <%= f.check_box :garden %>
                                <span>Garden</span>
                              </label>
                            </li>

                            <li>
                              <label class="c-box">
                                <%= f.check_box :shooting_court %>
                                <span>Shooting Court</span>
                              </label>
                            </li>

                            <li>
                              <label class="c-box">
                                <%= f.check_box :laundry_room %>
                                <span>Laundry Room</span>
                              </label>
                            </li>

                            <li>
                              <label class="c-box">
                                <%= f.check_box :mail_room %>
                                <span>Mail Room</span>
                              </label>
                            </li>

                            <li>
                              <label class="c-box">
                                <%= f.check_box :security %>
                                <span>Security</span>
                              </label>
                            </li>

                            <li>
                              <label class="c-box">
                                <%= f.check_box :lobby %>
                                <span>Lobby</span>
                              </label>
                            </li>
                            <li>
                              <label class="c-box">
                                <%= f.check_box :property_management_services %>
                                <span>Property Management</span>
                              </label>
                            </li>
                            <li>
                              <label class="c-box">
                                <%= f.check_box :clubhouse %>
                                <span>Clubhouse</span>
                              </label>
                            </li>
                            <li>
                              <label class="c-box">
                                <%= f.check_box :back_up_power %>
                                <span>Backup Power</span>
                              </label>
                            </li>
                          </ul>
                        </p>
                    </div>

                    <p>
                <%= f.label :amenities %>
                <%= f.text_area :amenities, class: 'c-textarea' %>
              </p>

              
            </div>
            <div class="col-md-6">
              <h2>Unit Types</h2>
              <br>
              <p>
                <label class="c-box is-header">
                  <%= f.check_box :studio %>
                  <span>Studio</span>
                </label>
              </p>
              <div class="row">
                <p class="col-xs-4">
                  <%= f.label :studio_size %>
                  <%= f.text_field :studio_size %>
                </p>
                <p class="col-xs-4">
                  <%= f.label :studio_price %>
                  <%= f.text_field :studio_price %>
                </p>
                <p class="col-xs-4">
                  <%= f.label :studio_monthly %>
                  <%= f.text_field :studio_monthly %>
                </p>
              </div>
              <div class="row">
                <p class="col-xs-4">
                  <%= f.label :studio_layout %>
                  <%= f.file_field :studio_layout %>
                </p>
                <p class="col-xs-8">
                  <%= f.label :studio_layout_caption %>
                  <%= f.text_field :studio_layout_caption %>
                </p>
              </div>

              <hr>

              <p>
                <label class="c-box is-header">
                  <%= f.check_box :one_bedroom %>
                  <span>1 bedroom</span>
                </label>
              </p>
              <div class="row">
                <p class="col-xs-4">
                  <%= f.label :one_bedroom_size %>
                  <%= f.text_field :one_bedroom_size %>
                </p>
                <p class="col-xs-4">
                  <%= f.label :one_bedroom_price %>
                  <%= f.text_field :one_bedroom_price %>
                </p>
                <p class="col-xs-4">
                  <%= f.label :one_bedroom_monthly %>
                  <%= f.text_field :one_bedroom_monthly %>
                </p>
              </div>
              <div class="row">
                <p class="col-xs-4">
                  <%= f.label :one_bedroom_layout %>
                  <%= f.file_field :one_bedroom_layout %>
                </p>
                <p class="col-xs-8">
                  <%= f.label :one_bedroom_layout_caption %>
                  <%= f.text_field :one_bedroom_layout_caption %>
                </p>
              </div>

              <hr>

              <p>
                <label class="c-box is-header">
                  <%= f.check_box :two_bedroom %>
                  <span>2 bedroom</span>
                </label>
              </p>
              <div class="row">
                <p class="col-xs-4">
                  <%= f.label :two_bedroom_size %>
                  <%= f.text_field :two_bedroom_size %>
                </p>
                <p class="col-xs-4">
                  <%= f.label :two_bedroom_price %>
                  <%= f.text_field :two_bedroom_price %>
                </p>
                <p class="col-xs-4">
                  <%= f.label :two_bedroom_monthly %>
                  <%= f.text_field :two_bedroom_monthly %>
                </p>
              </div>
              <div class="row">
                <p class="col-xs-4">
                  <%= f.label :two_bedroom_layout %>
                  <%= f.file_field :two_bedroom_layout %>
                </p>
                <p class="col-xs-8">
                  <%= f.label :two_bedroom_layout_caption %>
                  <%= f.text_field :two_bedroom_layout_caption %>
                </p>
              </div>

              <hr>

              <p>
                <label class="c-box is-header">
                  <%= f.check_box :three_bedroom %>
                  <span>3 bedroom</span>
                </label>
              </p>
              <div class="row">
                <p class="col-xs-4">
                  <%= f.label :three_bedroom_size %>
                  <%= f.text_field :three_bedroom_size %>
                </p>
                <p class="col-xs-4">
                  <%= f.label :three_bedroom_price %>
                  <%= f.text_field :three_bedroom_price %>
                </p>
                <p class="col-xs-4">
                  <%= f.label :three_bedroom_monthly %>
                  <%= f.text_field :three_bedroom_monthly %>
                </p>
              </div>
              <div class="row">
                <p class="col-xs-4">
                  <%= f.label :three_bedroom_layout %>
                  <%= f.file_field :three_bedroom_layout %>
                </p>
                <p class="col-xs-8">
                  <%= f.label :three_bedroom_layout_caption %>
                  <%= f.text_field :three_bedroom_layout_caption %>
                </p>
              </div>

              <hr>

              <p>
                <label class="c-box is-header">
                  <%= f.check_box :penthouse %>
                  <span>Penthouse</span>
                </label>
              </p>
              <div class="row">
                <p class="col-xs-4">
                  <%= f.label :penthouse_size %>
                  <%= f.text_field :penthouse_size %>
                </p>
                <p class="col-xs-4">
                  <%= f.label :penthouse_price %>
                  <%= f.text_field :penthouse_price %>
                </p>
                <p class="col-xs-4">
                  <%= f.label :penthouse_monthly %>
                  <%= f.text_field :penthouse_monthly %>
                </p>
              </div>
              <div class="row">
                <p class="col-xs-4">
                  <%= f.label :penthouse_layout %>
                  <%= f.file_field :penthouse_layout %>
                </p>
                <p class="col-xs-8">
                  <%= f.label :penthouse_layout_caption %>
                  <%= f.text_field :penthouse_layout_caption %>
                </p>
              </div>

              <hr>

              <p>
                <label class="c-box is-header">
                  <%= f.check_box :loft %>
                  <span>Loft</span>
                </label>
              </p>
              <div class="row">
                <p class="col-xs-4">
                  <%= f.label :loft_size %>
                  <%= f.text_field :loft_size %>
                </p>
                <p class="col-xs-4">
                  <%= f.label :loft_price %>
                  <%= f.text_field :loft_price %>
                </p>
                <p class="col-xs-4">
                  <%= f.label :loft_monthly %>
                  <%= f.text_field :loft_monthly %>
                </p>
              </div>
              <div class="row">
                <p class="col-xs-4">
                  <%= f.label :loft_layout %>
                  <%= f.file_field :loft_layout %>
                </p>
                <p class="col-xs-8">
                  <%= f.label :loft_layout_caption %>
                  <%= f.text_field :loft_layout_caption %>
                </p>
              </div>

               <hr>

              <div class="row">
                <p class="col-xs-4">
                  <%= f.label :target_completion_date %>
                  <%= f.text_field :target_completion_date %>
                </p>
                <p class="col-xs-4">
                  <label class="c-box">
                    <%= f.check_box :completed %>
                    <span>Completed</span>
                  </label>
                </p>

              </div>

              

              <div class="row">
                <p class="col-xs-4">
                  <%= f.label :as_low_as %>
                  <%= f.text_field :as_low_as %>

                </p>
                <p class="col-xs-8">
                  <label class="c-box">
                    <%= f.radio_button :as_low_as_label, "/month" %>
                    <span>Monthly Installment</span>
                  </label>
                  <label class="c-box">
                    <%= f.radio_button :as_low_as_label, " downpayment" %>
                    <span>Downpayment</span>
                  </label>
                </p>
              </div>

              <p>
                <%= f.label :unit_specifications %>
                <%= f.text_area :unit_specifications, class: 'c-textarea' %>
              </p>
              
              <p>
                <%= f.label :payment_terms %>
                <%= f.text_area :payment_terms, class: 'c-textarea' %>
              </p>
               

              <p>
                <%= f.label :reservation_fee %><%= f.text_field :reservation_fee %>
              </p>
              <p>
                <%= f.label :starting_price %><%= f.text_field :starting_price %>
              </p>

            
              <p><%= f.submit 'Save' %></p>
            </div>
            <% end %>
        </div>
    </div>
</section>
