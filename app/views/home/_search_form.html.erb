<form action="<%= search_properties_path %>" method="get" class="ct-formSearch--extended ct-u-marginBottom50">
  <div class="form-group ">
    <div class="ct-form--label--type1">
      <div class="ct-u-displayTableVertical">
        <div class="ct-u-displayTableCell">
          <div class="ct-input-group-btn">
            <button class="btn btn-primary">
              <i class="fa fa-search"></i>
            </button>
          </div>
        </div>
        <div class="ct-u-displayTableCell text-center">
          <span class="text-uppercase">Search for property</span>
        </div>
      </div>
    </div>
    <div class="ct-u-displayTableVertical ct-u-marginBottom20">
      <div class="ct-u-displayTableCell">
        <div class="ct-form--item">
          <label>Developer</label>
          <%= select_tag "developer_id", options_for_select(@option_developers.collect{ |d| [d.developer, d.id] }), {class:'ct-js-select ct-select-lg', include_blank: true,  multiple: false} %>
        </div>
      </div>
      <div class="ct-u-displayTableCell">
        <div class="ct-form--item">
          <label>Location</label>
          <%= select_tag "location", options_for_select(@option_locations.collect{ |l| [l.area, l.area] }), {class:'ct-js-select ct-select-lg', include_blank: true,  multiple: false} %>
        </div>
      </div>

      <div class="ct-u-displayTableCell">
        <div class="ct-form--item">
          <label>Property Status</label>
          <%= select_tag "status", options_for_select(['Completed','Preselling']), class: "ct-js-select ct-select-lg", include_blank: true, multiple: false %>
        </div>
      </div>

    </div>
    <div class="ct-u-displayTableVertical ct-slider--row ct-sliderAmount">
      <div class="ct-u-displayTableCell">
        <div class="ct-form--item">
          <label>Unit Type</label>
          <%= select_tag "unit_type", options_for_select(ApartmentType.all.collect{ |d| [d.title, d.id] }), class: "ct-js-select ct-select-lg", include_blank: true, multiple: false %>
        </div>
      </div>
      <div class="ct-u-displayTableCell">
        <div class="ct-form--item">
          <label>Price Range</label>
          <select name="price" class="ct-js-select ct-select-lg">
            <option value=""></option>
            <option value="1">up to 1,000,000</option>
            <option value="2">1,000,000...2,000,000</option>
            <option value="3">2,000,000...3,000,000</option>
            <option value="4">3,000,000...4,000,000</option>
            <option value="5">4,000,000...5,000,000</option>
            <option value="6">5,000,000 +</option>
          </select>
        </div>
      </div>

      <div class="ct-u-displayTableCell">
        <button type="submit" class="btn btn-warning text-capitalize pull-right">search now</button>
      </div>
    </div>
  </div>
</form>
