<section class="ct-u-paddingTop50 ct-u-paddingBottom100">
    <div class="container">
        <div class="ct-headerText--normal text-uppercase ct-u-marginBottom40">
            <h2>New / Edit Property</h2>
        </div>
        <div class="row">
            <div class="col-md-6">
                <form role="form" class="ct-formSubmission">
                    <div class="form-group ">
											<% if @property.errors.any? %>
											  <div id="error_explanation">
											    <h2>
											    	<%= pluralize(@property.errors.count, "error") %> prohibited this property from being saved:
											    </h2>

											    <ul>
												  <% @property.errors.full_messages.each do |msg| %>
											 	    <li><%= msg %></li>
											  	  <% end %>
											    </ul>
											  </div>
											<% end %>

                      <p>
												<label class="ct-fw-600 text-uppercase ct-u-marginBottom10">Name</label>
												<%= f.text_field :name %>
                      </p>

											<p>
												<label class="ct-fw-600 text-uppercase ct-u-marginBottom10">Permalink</label>
												<%= f.text_field :permalink %>
                      </p>

											<p>
                        <label class="ct-fw-600 text-uppercase ct-u-marginBottom10">Unit Types</label>
												<%= f.text_field :unit_types %>
                      </p>

											<p>
												<label class="ct-fw-600 text-uppercase ct-u-marginBottom10">Price Range</label>
												<%= f.text_field :price_range %>
                      </p>

											<p>
												<label class="ct-fw-600 text-uppercase ct-u-marginBottom10">Unit Sizes</label>
												<%= f.text_field :unit_sizes %>
                      </p>

											<p>
												<label class="ct-fw-600 text-uppercase ct-u-marginBottom10">Upload featured image</label>
                        <%= f.file_field :photo %>
												<span class="ct-u-marginBottom40">This is going to be the main image of property, it will be shown in thumbnails and all important places.</span>
										  </p>

                      <p>
												<label class="ct-fw-600 text-uppercase ct-u-marginBottom10">Upload logo</label>
                        <%= f.file_field :logo %>
                      </p>

											<p>
												<label class="ct-fw-600 text-uppercase ct-u-marginBottom10">Developer</label><br/>
                        <%= select("property","developer_id", @developers, {:include_blank => true}) %>
                      </p>


												<p>
													<%= f.label :total_floors %><%= f.text_field :no_of_floors %>
												</p>

												<p>
													<%= f.label :total_bldgs %><%= f.text_field :no_of_bldgs %>
												</p>

												<p>
													<%= f.label :total_units %><%= f.text_field :no_of_units %>
												</p>

												<p>
												  <%= f.label :address %><br/><%= f.text_area :address %>
												</p>

												<p>
												  <%= f.label :latitude %><%= f.text_field :latitude %>
												</p>

											    <p>
												  <%= f.label :longitude %><%= f.text_field :longitude %>
												</p>

												<p>
													<%= f.label :completed %><%= f.check_box :completed %>
												</p>

												<p>
													<%= f.label :target_completion_date %><%= f.text_field :target_completion_date %>
												</p>

												<p>
												  <%= f.label :description %><%= f.text_area :description %>
												</p>

												<p>
													<%= f.label :amenities %><%= f.text_area :amenities %>
												</p>

												<p>
													<%= f.label :unit_specifications %><%= f.text_area :unit_specifications %>
												</p>

												<p>
													<%= f.label :type %><%= select("property", "property_type", @property_types) %>
												</p>

												<p>
													<%= f.label :featured %><%= f.check_box :featured %>
												</p>

												<p>
													<%= f.label :hidden %><%= f.check_box :hidden %>
												</p>

												<p>
													<%= f.label :sold_out %><%= f.check_box :sold_out %>
												</p>
												<p>
													<%= f.label :preselling %><%= f.check_box :preselling%>
												</p>

												<p>
 										 		<%= f.label :payment_terms %><%= f.text_area :payment_terms %>
 										 	</p>

 										 	<p>
 										 		<%= f.label :as_low_as %><%= f.text_field :as_low_as %><br>
 										 		<%= f.radio_button :as_low_as_label, "/month" %>Monthly Installment
 										 		<%= f.radio_button :as_low_as_label, " downpayment" %>Downpayment
 										 	</p>

 										 	<p>
 										 		<%= f.label :reservation_fee %><%= f.text_field :reservation_fee %>
 										 	</p>
 										 	<p>
 										 		<%= f.label :starting_price %><%= f.text_field :starting_price %>
 										 	</p>

											<% f.label :unit_types %><% select("property","unit_types", @unit_types, {:include_blank => true}) %>

											<p>
												<%= f.label :unit_types %><br>
												<div style="margin-left:63px;margin-top:-0.5em;">
												<%= f.check_box :studio %> Studio<br>
												<%= f.check_box :one_bedroom %> 1 Bedroom<br>
												<%= f.check_box :two_bedroom %> 2 Bedroom<br>
												<%= f.check_box :three_bedroom %> 3 Bedroom<br>
												<%= f.check_box :penthouse%> Penthouse
												</div>
											</p>

											<p>
												<% f.label :unit_sizes %><% f.text_field :unit_sizes %>
											</p>

											<p>
												<%= label_tag :sizes %><br>
												<div style="padding-left:4px;margin-top:-0.5em;text-align:right;width:280px;">
												Studio: <%= f.text_field :studio_size %><br>
												1 Bedroom: <%= f.text_field :one_bedroom_size %><br>
												2 Bedroom: <%= f.text_field :two_bedroom_size %><br>
												3 Bedroom: <%= f.text_field :three_bedroom_size %><br>
												Penthouse: <%= f.text_field :penthouse_size %>
												</div>
											</p>

											<p></p>


											<p>
												<%= label_tag :prices %><br>
												<div style="padding-left:4px;margin-top:-0.5em;text-align:right;width:280px;">
												Studio: <%= f.text_field :studio_price %><br>
												1 Bedroom: <%= f.text_field :one_bedroom_price %><br>
												2 Bedroom: <%= f.text_field :two_bedroom_price %><br>
												3 Bedroom: <%= f.text_field :three_bedroom_price %><br>
												Penthouse: <%= f.text_field :penthouse_price %>
												</div>
											</p>

											<p></p>

											<p>
												<%= label_tag :monthly %><br>
												<div style="padding-left:4px;margin-top:-0.5em;text-align:right;width:280px;">
												Studio:    <%= f.text_field :studio_monthly %><br>
												1 Bedroom: <%= f.text_field :one_bedroom_monthly %><br>
												2 Bedroom: <%= f.text_field :two_bedroom_monthly %><br>
												3 Bedroom: <%= f.text_field :three_bedroom_monthly %><br>
												Penthouse: <%= f.text_field :penthouse_monthly %>
												</div>
											</p>

											<p></p>

											<p>
												<%= label_tag :floor_plans%><br>
												<div style="padding-left:4px;margin-top:-0.5em;text-align:right;width:280px;">
												Studio: <%= f.file_field :studio_layout %><br>
												1 Bedroom: <%= f.file_field :one_bedroom_layout %><br>
												2 Bedroom: <%= f.file_field :two_bedroom_layout %><br>
												3 Bedroom: <%= f.file_field :three_bedroom_layout %><br>
												Penthouse: <%= f.file_field :penthouse_layout %>
												</div>
											</p>

											<p></p>

											<p>
												<%= label_tag :captions %><br>
												<div style="padding-left:4px;margin-top:-0.5em;text-align:right;width:280px;">
													Studio: <%#= f.text_field :studio_layout_caption %><br>
													1 Bedroom: <%#= f.text_field :one_bedroom_layout_caption %><br>
													2 Bedroom: <%#= f.text_field :two_bedroom_layout_caption %><br>
													3 Bedroom: <%#= f.text_field :three_bedroom_layout_caption %><br>
													Penthouse: <%#= f.text_field :penthouse_layout_caption %>
												</div>
											</p>

                      <p>
                        <%= label_tag :elevators %><%= f.check_box :elevators %>
                        <%= label_tag :pool %> <%= f.check_box :swimming_pool %>
                        <%= label_tag :fitness_gym %> <%= f.check_box :fitness_gym %>
                        <%= label_tag :parking %><%= f.check_box :parking %>
                        <%= label_tag :function_room %> <%= f.check_box :function_room %>
                        <%= label_tag :retail_area %> <%= f.check_box :retail_area %>
                        <%= label_tag :childrens_play_area %> <%= f.check_box :childrens_play_area %>
                        <%= label_tag :garden %> <%= f.check_box :garden %>
                        <%= label_tag :shooting_court %> <%= f.check_box :shooting_court %>
                        <%= label_tag :laundry_room %> <%= f.check_box :laundry_room %>
                        <%= label_tag :mail_room %> <%= f.check_box :mail_room %>
                        <%= label_tag :security %> <%= f.check_box :security %>
                        <%= label_tag :lobby %> <%= f.check_box :lobby %>
                        <%= label_tag :property_management %> <%= f.check_box :property_management_services %>
                        <%= label_tag :clubhouse %> <%= f.check_box :clubhouse %>
                        <%= label_tag :back_up_power %> <%= f.check_box :back_up_power %>
                      </p>

                      <p><%= f.submit 'Save' %></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
