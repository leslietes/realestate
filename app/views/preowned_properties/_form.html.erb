<section class="ct-u-paddingTop50 ct-u-paddingBottom100">
  <div class="container">
    <div class="ct-headerText--normal text-uppercase ct-u-marginBottom40">
      <h2>New / Edit Preowned Properties</h2>
    </div>
    <div class="row">
      <div class="col-md-6">
        <%= form_for @preowned_property, url: {action: "create"}, html: {class: "ct-property--small", multipart: true} do |f| %>
        <div class="form-group ">
          <% if @preowned_property.errors.any? %>
          <div id="error_explanation">
            <h2>
              <%= pluralize(@preowned_property.errors.count, "error") %> prohibited this preowned property from being
              saved:
            </h2>

            <ul>
              <% @preowned_property.errors.full_messages.each do |msg| %>
              <li>
                <%= msg %>
              </li>
              <% end %>
            </ul>
          </div>
          <% end %>
        </div>
        <div class="row">
          <p class="c-select-container col-xs-6">
            <label>Status *</label>
            <%= f.select(:status, ['New','Sold']) %>
          </p>

          <p class="c-select-container col-xs-6">
            <label>Rent or Sale *</label>
            <%= f.select(:rent_or_sale, ['Rent','Sale']) %>
          </p>
        </div>
          <p>
            <label>Name *</label>
            <%= f.text_field :name %>
          </p>

          <p>
            <label>Permalink *</label>
            <%= f.text_field :permalink %>
          </p>

          <p>
            <label>Address</label>
            <%= f.text_field :address %>
          </p>

          <p class="c-select-container">
            <label>Location * </label>
            <%= f.collection_select(:location, Location.all, :area, :area) %>
          </p>

          <div class="row">
            <p class="col-xs-6"> 
              <label>Latitude * </label>
              <%= f.text_field :latitude %>
            </p>

            <p class="col-xs-6">
              <label>Longitude * </label>
              <%= f.text_field :longitude %>
            </p>
          </div>

          <p>
            <label>Project Name</label>
            <%= f.text_field :project_name %>
          </p>

          <p class="c-select-container">
            <label>Developer *</label>
            <%= f.collection_select(:developer_id, Developer.all, :id, :developer) %>
          </p>

          <div class="row">

            <p class="c-select-container col-xs-12 col-sm-4">
              <label>View</label>
              <%= f.select(:view, ['','Mountain','Sea','City']) %>
            </p>

            <p class="c-select-container col-xs-12 col-sm-4">
              <label>Orientation</label>
              <%= f.select(:orientation, ["East Facing","West Facing","South Facing","North Facing"]) %>
            </p>

            <p class="c-select-container col-xs-12 col-sm-4">
              <label>Unit type</label>
              <%= f.select(:unit_type,  ['Studio', '1Br', '2Br', '3Br', 'Penthouse', 'Loft']) %>
            </p>

          </div>

          <div class="row">

            <p class=" col-xs-12 col-sm-4">
              <label>Unit size</label>
              <%= f.text_field :unit_size %>
            </p>

            <p class=" col-xs-12 col-sm-4">
              <label>No of bedrooms</label>
              <%= f.text_field :bedrooms %>
            </p>

            <p class=" col-xs-12 col-sm-4">
              <label>No of bathrooms</label>
              <%= f.text_field :bathrooms %>
            </p>
        
          </div>

          <div class="row">
            <p class="col-xs-6">
            <label>Monthly dues</label>
            <%= f.text_field :monthly_dues %>
          </p>

          <p class="col-xs-6">
            <label>Price *</label>
            <%= f.text_field :price %>
          </p>
          </div>

          <p>
            <label class="c-box">
              <%= f.check_box :furnished %>
              <span>Furnished</span>
            </label>

            <label class="c-box">
              <%= f.check_box :hidden %>
              <span>Hidden</span>
            </label>

            <label class="c-box">
              <%= f.check_box :parking %>
              <span>Parking Slots</span>
            </label>
          </p>

          
          

        </div>
        <div class="col-md-6">
          <h2>Photos</h2>
          <br>
          <p>
            <label>Upload featured image * </label>
            <%= f.file_field :photo %>
            <span><small>This is going to be the main image of property, it will be shown in thumbnails and all
                important places.</small></span>
          </p>

          <p>
            <label>Upload logo</label>
            <%= f.file_field :logo %>
          </p>

          <p>
            <label>Location Map</label>
            <%= f.file_field :location_map %>
          </p>
          <br>
          <h2>Amenities & Facilities </h2>
          <ul class="c-list-cols">
            <li>
              <label class="c-box">
                <%= f.check_box :elevators %>
                <span>Elevators</span>
              </label>
            </li>
            <li>
              <label class="c-box">
                <%= f.check_box :swimming_pool %>
                <span>Swimming Pool</span>
              </label>
            </li>
            <li>
              <label class="c-box">
                <%= f.check_box :fitness_gym %>
                <span>Fitness Gym</span>
              </label>
            </li>
            <li>
              <label class="c-box">
                <%= f.check_box :parking %>
                <span>Parking</span>
              </label>
            </li>
            <li>
              <label class="c-box">
                <%= f.check_box :function_room %>
                <span>Function Room</span>
              </label>
            </li>
            <li>
              <label class="c-box">
                <%= f.check_box :retail_area %>
                <span>Retail Area</span>
              </label>
            </li>
            <li>
              <label class="c-box">
                <%= f.check_box :childrens_play_area %>
                <span>Children's Play Area</span>
              </label>
            </li>
            <li>
              <label class="c-box">
                <%= f.check_box :garden %>
                <span>Garden</span>
              </label>
            </li>
            <li>
              <label class="c-box">
                <%= f.check_box :shooting_court %>
                <span>Shooting Court</span>
              </label>
            </li>
            <li>
              <label class="c-box">
                <%= f.check_box :laundry_room %>
                <span>Laundry Room</span>
              </label>
            </li>
            <li>
              <label class="c-box">
                <%= f.check_box :mail_room %>
                <span>Mail Room</span>
              </label>
            </li>
            <li>
              <label class="c-box">
                <%= f.check_box :security %>
                <span>Security</span>
              </label>
            </li>
            <li>
              <label class="c-box">
                <%= f.check_box :lobby %>
                <span>Lobby</span>
              </label>
            </li>
            <li>
              <label class="c-box">
                <%= f.check_box :property_management_services %>
                <span>Property Management Services</span>
              </label>
            </li>
            <li>
              <label class="c-box">
                <%= f.check_box :clubhouse %>
                <span>Clubhouse</span>
              </label>
            </li>
            <li>
              <label class="c-box">
                <%= f.check_box :back_up_power %>
                <span>back_up_power</span>
              </label>
            </li>

          </ul>



          <%= f.submit %>

          <% end %>

        </div>
      </div>
    </div>
</section>