<header class="ct-mediaSection ct-u-paddingBoth100" data-stellar-background-ratio="0.3" data-height="470" data-type="parallax" data-bg-image="assets/images/content/agency-parallax.jpg" data-bg-image-mobile="assets/images/content/agency-parallax.jpg">
    <div class="container">
        <div class="ct-personBox ct-personBox--extended ct-personBox--extendedLight text-left">
            <div class="ct-imagePerson">
                <img src="content/logo--agency.png" alt="">
                <ul class="ct-panel--socials list-inline list-unstyled">
                    <li><a href="https://www.facebook.com/createITpl"><div class="ct-socials ct-socials--circle"><i class="fa fa-facebook"></i></div></a></li>
                    <li><a href="https://twitter.com/createitpl"><div class="ct-socials ct-socials--circle"><i class="fa fa-twitter"></i></div></a></li>
                    <li><a href="#"><div class="ct-socials ct-socials--circle"><i class="fa fa-instagram"></i></div></a></li>
                </ul>
            </div>
            <div class="ct-personContent">
                <div class="ct-personName ct-u-paddingBoth10 text-uppercase">
                    <h2><%= @setting.agency_name %></h2>
                    <a href=""><%= @count %> properties <i class="fa fa-external-link"></i></a>
                </div>
                <div class="ct-personDescription pull-right ct-u-paddingBoth20">
                    <ul class="list-unstyled ct-contactPerson pull-right">
                        <li>
                            <i class="fa fa-phone"></i>
                            <span><%= @setting.office_no %></span>
                        </li>
                        <li>
                            <a href=""><i class="fa fa-skype"></i> kristine.black</a>
                        </li>
                        <li>
                            <i class="fa fa-mobile"></i>
                            <span><%= @setting.mobile_no %></span>
                        </li>
                        <li>
                            <a href=""><i class="fa fa-envelope-o"></i> <%= @setting.production_email %></a>
                        </li>
                    </ul>
                </div>
                <div class="ct-buttonPanel text-capitalize ct-u-paddingBoth20 pull-right">
                    <%= link_to 'Visit Our Website', root_url, class: 'btn btn-default btn-transparent--border ct-u-text--white btn-hoverWhite' %>
                    <%= link_to 'View Properties', properties_url, class: 'btn btn-default btn-transparent--border ct-u-text--white btn-hoverWhite' %>
                </div>
            </div>
        </div>
    </div>
</header>
<section class="ct-u-paddingTop60 ct-u-paddingBottom30 text-center">
    <div class="container">
        <div class="ct-heading ct-u-marginBottom60">
            <h3 class="text-uppercase">Our agents</h3>
        </div>
        <div class="row">
           <% @agents.each do |agent| %>
             <div class="col-sm-6 col-md-3">
                <div class="ct-personBox text-left">
                    <div class="ct-imagePerson">
                        <%= image_tag agent.avatar.url(:medium) %>
                        <ul class="ct-panel--socials list-inline list-unstyled">
                            <li><a href="https://www.facebook.com/createITpl"><div class="ct-socials ct-socials--circle"><i class="fa fa-facebook"></i></div></a></li>
                            <li><a href="https://twitter.com/createitpl"><div class="ct-socials ct-socials--circle"><i class="fa fa-twitter"></i></div></a></li>
                            <li><a href="#"><div class="ct-socials ct-socials--circle"><i class="fa fa-instagram"></i></div></a></li>
                        </ul>
                    </div>
                    <div class="ct-personContent">
                        <div class="ct-personName ct-u-paddingBottom10 ct-u-marginBottom20">
                            <h5 class="ct-fw-600"><%= agent.agent_name %></h5>
                            <a href=""><%= agent.position %></a>
                        </div>
                        <div class="ct-personDescription">
                            <ul class="list-unstyled ct-contactPerson">
                                <li>
                                    <i class="fa fa-phone"></i>
                                    <span><%= @setting.office_no %></span>
                                </li>
                                <li>
                                    <i class="fa fa-mobile"></i>
                                    <span><%= agent.mobile_no %></span>
                                </li>
                                <li>
                                    <a href=""><i class="fa fa-envelope-o"></i> <%= agent.email_address %></a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
           <% end %>
        </div>
    </div>
</section>
