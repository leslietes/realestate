


<%= render partial: "/properties/search_form_mobile" %>


<section class="ct-u-paddingTop50 ct-u-paddingBottom60">
<div class="container">
<div class="ct-section--products">
<div class="row">
<div class="col-md-4 col-lg-3">
    <div class="ct-js-sidebar">
        <div class="row">
            <div class="col-sm-6 col-md-12">

						<%= render partial: "/properties/search_form" %>

            <%= render partial: "/properties/preselling" %>


        </div>
    </div>
</div>
<div class="col-md-8 col-lg-9">
<div class="ct-sortingBar ct-u-paddingRight10 ct-u-paddingLeft10 ct-u-marginBottom30">
    <div class="ct-sortingTitle pull-left">
        <h4 class="text-uppercase">Search Results<span> (231)</span></h4>
    </div>
    <ul class="list-inline list-unstyled pull-right ct-u-paddingBoth15">
        <li>
            <form>
                <select class="ct-js-select">
                    <option value="price">Sort by</option>
                    <option value="price">Price</option>
                    <option value="newness">Newness</option>
                </select>
            </form>
        </li>
        <li>
            <form>
                <select class="ct-js-select">
                    <option value="nine">12 items</option>
                    <option value="eighteen">18 items</option>
                    <option value="twentyseven">27 items</option>
                    <option value="fourtyfive">45 items</option>
                    <option value="ninety">90 items</option>
                </select>
            </form>
        </li>
    </ul>
    <ul class="ct-showPages list-inline list-unstyled pull-right ct-u-paddingBoth15">
        <li class="ct-showElements is-active" id="ct-js-showTiles">
            <a href="#">
                <i class="fa fa-th fa-fw"></i>
            </a>
        </li>
        <li class="ct-showElements" id="ct-js-showList">
            <a href="#">
                <i class="fa fa-th-list fa-fw"></i>
            </a>
        </li>
    </ul>
    <div class="clearfix"></div>
</div>
<div class="row ct-js-search-results ct-showProducts--default">

	  <% @properties.each do |property| %>
    <div class="mcol-sm-6 col-md-6 col-lg-4">
        <div class="ct-itemProducts ct-u-marginBottom30 ct-hover">
            <label class="control-label sale">
                <%= property.status %>
            </label>

                <div class="ct-main-content">
                    <div class="ct-imageBox">
                      <%= link_to (image_tag property.photo.url(:medium)), property_url(property) %>
                    </div>
                    <div class="ct-main-text">
                        <div class="ct-product--tilte">
                            <%= link_to property.name, property_url(property) %>
                        </div>
                        <div class="ct-product--price">
                            <span><%= property.price_range %></span>
                        </div>
                        <div class="ct-product--description">
                            <%= property.address %><br/>
                            <%= property.location %><br/>
                            <%= link_to 'Edit', edit_property_url(property) %>
    												<%= link_to 'Delete', property_url(property), :method => :delete, :confirm => "Are you sure?" %>
                        </div>
                    </div>
                </div>
                <div class="ct-product--meta">
                    <div class="ct-icons">
                        <span>
                            <i class="fa fa-bed"></i> <%= property.unit_types %>
                        </span>
                    </div>
                    <div class="ct-text">
                        <span><span><%= property.unit_sizes %></span></span>
                    </div>
                </div>

        </div>
    </div>
		<div class="clearfix visible-md"></div>
		<% end %>

</div>
<div class="ct-pagination text-center">
    <ul class="pagination">
        <li><a href="#" aria-label="Previous"><span aria-hidden="true"><i class="fa fa-angle-left"></i></span></a></li>
        <li class="active"><a href="#">1</a></li>
        <li><a href="#">2</a></li>
        <li><a href="#">3</a></li>
        <li><a href="#">4</a></li>
        <li><a href="#">5</a></li>
        <li><a href="#" aria-label="Next"><span aria-hidden="true"><i class="fa fa-angle-right"></i></span></a></li>
    </ul>
</div>
<%= link_to 'New', new_property_url %>
</div>
</div>
</div>
</div>
</section>
