<h1>Settings</h1>

<%= form_for :setting, :url => admin_url(@setting), :html => {:method => :put, :multipart => true} do |f| %>
  <%= label_tag 'production_email' %><%= f.text_field :production_email %>
	<%= label_tag 'office_no' %><%= f.text_field :office_no %>
	<%= label_tag 'office_address' %><%= f.text_field :office_address %>
	<%= label_tag 'facebook' %><%= f.text_field :facebook %>
	<%= label_tag 'twitter' %><%= f.text_field :twitter %>
	<%= label_tag 'instagram' %><%= f.text_field :instagram %>
	<%= label_tag 'about_us' %><br/><%= f.text_area :about_us %>
	<%= f.submit 'Update' %>
<% end %>

<%= form_for :setting, :url => admin_url(@setting), :html => {:method => :put, :multipart => true} do |f| %>
  <%= label_tag :featured1 %><br/><%= image_tag @setting.featured1.url(:medium) %><%= link_to 'Delete', remove_featured1_url(f) %><br/><%= f.file_field :featured1 %>
	<%= label_tag :featured2 %><br/><%= image_tag @setting.featured2.url(:medium) %><%= link_to 'Delete', remove_featured2_url(f) %><br/><%= f.file_field :featured2 %>
	<%= label_tag :featured3 %><br/><%= image_tag @setting.featured3.url(:medium) %><%= link_to 'Delete', remove_featured3_url(f) %><br/><%= f.file_field :featured3 %>
	<%= label_tag :featured4 %><br/><%= image_tag @setting.featured4.url(:medium) %><%= link_to 'Delete', remove_featured4_url(f) %><br/><%= f.file_field :featured4 %>
	<%= label_tag :featured5 %><br/><%= image_tag @setting.featured5.url(:medium) %><%= link_to 'Delete', remove_featured5_url(f) %><br/><%= f.file_field :featured5 %>
	<%= f.submit 'Update' %>
<% end %>

<%= form_tag add_location_url do  %>
	<label>Location</label><%= text_field_tag :area %>
	<%= submit_tag 'Add' %>
<% end %>

<% @locations.each do |location| %>
	<p><%= location.area %> <%= link_to '[remove]', remove_location_url(location) %></p>
<% end %>

<%= form_tag add_price_range_url do  %>
	<label>Price Range</label><%= text_field_tag :range %><br><br>
	<label>From</label><%= text_field_tag :value_from %><br><br>
	<label>To</label><%= text_field_tag :value_to %><br><br>
	<%= submit_tag 'Add' %><br><br>
<% end %>

<table id="price_range">
	<thead>
		<tr>
			<th>Range</th>
			<th>From</th>
			<th>To</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @price_range.each do |pr| %>
			<tr>
				<td width="150px"><%= pr.range %></td>
				<td width="80px" class="center"><%= number_to_currency(pr.value_from, :precision => 0, :unit => "")  %></td>
				<td width="80px" class="center"><%= number_to_currency(pr.value_to,   :precision => 0, :unit => "")  %></td>
				<td width="50px"  class="center"><%= link_to 'remove', remove_price_range_url(pr) %></td>
			</tr>
		<% end %>
	</tbody>
</table>
