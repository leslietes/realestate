                        <label class="ct-fw-600 text-uppercase ct-u-marginBottom10">Garden</label><br/>
                        <%= f.check_box :garden %>

                        <label class="ct-fw-600 text-uppercase ct-u-marginBottom10">Shooting Court</label><br/>
                        <%= f.check_box :shooting_court %>

