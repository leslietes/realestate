<header class="ct-mediaSection" data-stellar-background-ratio="0.3" data-height="140" data-type="parallax" data-bg-image="content/agency-parallax.jpg" data-bg-image-mobile="content/agency-parallax.jpg">
    <div class="ct-mediaSection-inner">
        <div class="container">
            <div class="ct-u-displayTableVertical">
                <div class="ct-textBox ct-u-text--white ct-u-displayTableCell text-left">
                    <h2 class="text-uppercase"><%= @property.name %></h2>
                    <h4 class="text-uppercase"><%= @property.address %></h4>
                    <span class="ct-productID ct-fw-600">
                      <% if @property.status == 'Completed' %>
                        Completed
                      <% else %>
                        Target Completion Date: <%= @property.target_completion_date %>
                      <% end %>
                    </span>
                </div>
                <div class="ct-u-displayTableCell text-right">
                    <div >
                        <%= link_to 'Edit Property', edit_property_url(@property), class: 'btn btn-default btn-transparent--border btn-hoverWhite ct-u-text--white' %>
                        <%= link_to 'Property Listing', properties_url, class: 'btn btn-default btn-transparent--border btn-hoverWhite ct-u-text--white' %>
                        <%= link_to 'Go to Developer', developer_url(@property.developer), class: 'btn btn-default btn-transparent--border btn-hoverWhite ct-u-text--white' %>

                    </div>
                </div>
            </div>
        </div>
    </div>
</header>

